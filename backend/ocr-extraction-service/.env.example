# OCR Extraction Service Environment Variables

# Service Configuration
PORT=4003

# Profile: 'local' for development (uses Ollama), 'production' for deployment (uses Gemini)
PROFILE=local

# Local LLM Configuration (Ollama) - Used when PROFILE=local
LOCAL_LLM_BASE_URL=http://host.docker.internal:11434
LOCAL_LLM_MODEL=mistral:latest

# Production LLM Configuration (Gemini) - Used when PROFILE=production
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Service URLs
CHAT_SERVICE_BASE_URL=http://chat-service:4005/api/v1
EMAIL_SERVICE_BASE_URL=http://email-storage-service:4002

# Storage Paths (Docker volumes)
INVOICES_JSON_FOLDER=invoices_json
INVOICES_PDF_FOLDER=invoices_pdf
PROCESSING_STATUS_FOLDER=processing_status

# Google Drive API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
